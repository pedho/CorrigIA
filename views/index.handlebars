<h2 class="mt-4">Temas recentes</h2>

{{#each temas}}

    <div class="card mt-4">
        <div class="card-body">
    
            <h4 align="center">{{nome}}</h4>
            <hr>
            <div align="center">
              <a href="/temas/{{slug}}"><button class="btn btn-success">Envie sua redação</button></a>
            </div>
            
        </div>
    </div>


{{else}}
    <h3>Nenhum tema</h3>
{{/each}}