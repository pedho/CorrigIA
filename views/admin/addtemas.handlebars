{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h2>Novo tema</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/temas/novo" method="post">

        <label for="nome">Nome: </label>
        <input type="text" id="nome" name="nome" placeholder="Nome do tema" class="form-control">
        <label for="slug">Slug: </label>
        <input type="slug" id="slug" name="slug" placeholder="Slug do tema" class="form-control">
        <br>
        <button type="submit" class="btn btn-success">Criar tema</button>
        </form>

    </div>
</div>