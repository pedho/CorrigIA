{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h2>Editar tema</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/temas/edit" method="post">

        <input type="hidden" name="id" value="{{tema._id}}">
        <label for="nome">Nome: </label>
        <input type="text" id="nome" name="nome" placeholder="Nome do tema" class="form-control" value="{{tema.nome}}">
        <label for="slug">Slug: </label>
        <input type="slug" id="slug" name="slug" placeholder="Slug do tema" class="form-control" value="{{tema.slug}}">
        <br>
        <button type="submit" class="btn btn-success">Editar tema</button>
        </form>

    </div>
</div>