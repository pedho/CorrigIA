{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/referencias/nova" method="post">

        <h4>Nova referencia</h4>
        <textarea name="conteudo" placeholder="Insira a descrição" class="form-control" rows="20"></textarea>
        <label for="tema">Tema: </label>
        <select class="mt-4" name="tema">
            {{#each temas}}
                <option value="{{_id}}">{{nome}}</option>
            {{else}}
                <option value="0">Nenhum tema registrado</option>
            {{/each}}
        </select>
        <br>
        <button type="submit" class="btn btn-success mt-4">Adicionar referencia</button>
        </form>
    </div>
</div>